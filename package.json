{
  "name": "nodejs-enterprise-boilerplate",
  "version": "1.0.0",
  "description": "Production-ready, enterprise-grade Node.js backend boilerplate with TypeScript",
  "main": "dist/main.js",
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t nodejs-enterprise-boilerplate:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env nodejs-enterprise-boilerplate:latest",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "enterprise",
    "boilerplate",
    "fintech",
    "saas",
    "kubernetes"
  ],
  "author": "Your Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "zod": "^3.22.4",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "redis": "^4.6.11",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "pino": "^8.17.2",
    "pino-http": "^8.5.0",
    "pino-pretty": "^10.3.1",
    "prom-client": "^15.0.0",
    "opossum": "^8.1.0",
    "isomorphic-dompurify": "^2.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.1",
    "nodemon": "^3.0.2",
    "@types/opossum": "^8.1.0",
    "@types/pg": "^8.10.9"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
