# Environment variables template
# Copy this to .env and fill in actual values
# NEVER commit .env to version control

# Node environment
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# JWT Secrets (MUST BE CHANGED IN PRODUCTION)
JWT_ACCESS_SECRET=your_very_long_secret_key_for_access_tokens_min_32_chars
JWT_REFRESH_SECRET=your_very_long_secret_key_for_refresh_tokens_min_32_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Session
SESSION_SECRET=your_very_long_session_secret_min_32_chars

# Database Configuration
DATABASE_TYPE=mongodb
DATABASE_URL=mongodb://localhost:27017/enterprise_app
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost:5432/enterprise_appdb
# DATABASE_TYPE=postgres

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=10

# OpenTelemetry
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Feature Flags
FEATURE_FLAGS_ENABLED=true

# Application
APP_NAME=Enterprise API
APP_VERSION=1.0.0
